// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      // background matcher, needed for using this as pre-launch-tasks
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "watch-tests",
      // background matcher, needed for using this as pre-launch-tasks
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build"
    },
    {
      "type": "npm",
      "script": "fix-format",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "fix-lint",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$ts-webpack",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "problemMatcher": "$tsc",
      "script": "compile-tests",
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "dependsOn": ["tasks: build-tests"]
    },
    {
      "label": "tasks: watch-tests",
      "dependsOn": ["npm: watch", "npm: watch-tests"]
    },
    {
      "label": "tasks: build-tests",
      "dependsOn": ["npm: compile-tests", "npm: compile"]
    }
  ]
}
